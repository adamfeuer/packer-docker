{
    "builders":[{
        "type": "docker",
        "image": "ubuntu",
        "export_path": "image.tar",
        "changes": [
        ]
    }],
    "provisioners":[
        {
            "type": "shell",
            "inline": [
                        "export TERM=linux",
                        "export DEBIAN_FRONTEND=noninteractive",
                        "apt-get -y update; apt-get install -y sudo curl"
                      ]
                    },
        {
            "type": "chef-solo",
            "cookbook_paths": ["site-cookbooks"],
            "run_list": ["apache::default"]
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "tcnksm/packer-chef",
            "tag": "0.1"
        }
    ]
}
